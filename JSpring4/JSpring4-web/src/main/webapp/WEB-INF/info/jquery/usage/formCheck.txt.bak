--------------------------------------------------------------  All check (1.7 --> attr ==> prop)
$(function() {
    $("#btnAllCheck").click(function() {
        $("input:checkbox[name=num]:not(checked)").attr("checked", "checked");
    });
	
    $("#btnUnCheck").click(function() {
        $("input:checkbox[name=num]:checked").attr("checked", "");
    });
})


